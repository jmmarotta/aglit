{
  "name": "opencode-aglit",
  "version": "0.0.0",
  "description": "OpenCode plugin for AGLIT issue tracking",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --sourcemap --external @opencode-ai/plugin && tsgo -p tsconfig.json --emitDeclarationOnly",
    "typecheck": "tsgo -p tsconfig.test.json --noEmit",
    "lint": "oxlint src",
    "fmt": "oxfmt --write src",
    "fmt:check": "oxfmt --check src",
    "test": "bun test"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1"
  },
  "dependencies": {},
  "peerDependencies": {
    "@opencode-ai/plugin": "^1"
  }
}
